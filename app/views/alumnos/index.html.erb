<section class="intro-single">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-8">
        <div class="title-single-box">
          <h1 class="title-single">Listado de lumnos</h1>
          <span class="color-text-a">...</span>
        </div>
      </div>
      <div class="col-md-12 col-lg-4">
        <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/">Inicio</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Contactenos
            </li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</section><!-- End Intro Single-->

<p id="notice"><%= notice %></p>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Nombres</th>
      <th>Dni</th>
      <th>Email</th>
      <th>Edad</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>
        <td><%= alumno.nombres %></td>
        <td><%= alumno.dni %></td>
        <td><%= alumno.email %></td>
        <td><%= alumno.edad %></td>
        <td><%= link_to 'Show', alumno %></td>
        <td><%= link_to 'Edit', edit_alumno_path(alumno) %></td>
        <td><%= link_to 'Destroy', alumno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  
<%= link_to 'New Alumno', new_alumno_path, :class => "btn btn-outline-primary" %>




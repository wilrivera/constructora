<table class="table table-hover">
  <thead>
    <tr>
      <th>DNI</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Telefono</th>
      <th>Fecha Cita</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cita.each do |citum| %>
      <tr>
        <td><%= citum.dni %></td>
        <td><%= citum.nombre %></td>
        <td><%= citum.apellido %></td>
        <td><%= citum.email %></td>
        <td><%= citum.telefono %></td>
        <td><%= citum.fechacita %></td>
        <td><%= link_to 'Ver Detalles', citum %></td>
        <td><%= link_to 'Registrar AtenciÃ³n', edit_citum_path(citum) %></td>
        <td><%= link_to 'Eliminar', citum, method: :delete, data: { confirm: 'Seguro de eliminar los datos?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


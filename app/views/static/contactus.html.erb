<!-- ======= Contact Single ======= -->
<section class="contact">
  <div class="container">
    
    <div class="row">
    
       <div class="col-sm-12">
        <div class="contact-map box">
          <div id="map" class="contact-map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.1422937950147!2d-73.98731968482413!3d40.75889497932681!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25855c6480299%3A0x55194ec5a1ae072e!2sTimes+Square!5e0!3m2!1ses-419!2sve!4v1510329142834" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
          </div>
        </div>
      </div>

      <div class="col-sm-12 section-t8">
        <div class="row">
          <div class="col-md-7">
            <%= form_for :upc, :html => { :method => :post , :class => "needs-validation", :novalidate => "novalidate" }, :url => { :controller => "static", :action => "mimetodo" } do |f| %>
               
               <div class="row">

               <div class="col-md-6 mb-3">
                <div class="form-group">
                    <%= f.text_field :name, { :class => "form-control form-control-lg form-control-a", :placeholder => "Nombres", :required => "required"} %>
                    <div class="valid-feedback">Valido</div>
                    <div class="invalid-feedback">Por favor ingresar Nombre y Apellidos</div>
                </div>
                </div>
                <div class="col-md-6 mb-3">
                <div class="form-group">
                    <%= f.email_field :email, { :class => "form-control form-control-lg form-control-a", :placeholder => "Email", :required => "required" } %>
                    <div class="valid-feedback">Valido</div>
                    <div class="invalid-feedback">Por favor ingresar su email</div>
                </div>
                </div>
                <div class="col-md-12 mb-3">
                 <div class="form-group">
                    <%= f.text_field :asunto, { :class => "form-control form-control-lg form-control-a", :placeholder => "Asunto"} %>
                </div>
                </div>
                <div class="col-md-12">
                <div class="form-group">
                    <%= f.text_area :mensaje, { :class => "form-control form-control-lg form-control-a", :placeholder => "Por favor escriba su mensaje", :required => "required", :rows => "6" } %>
                    <div class="valid-feedback">Valido</div>
                    <div class="invalid-feedback">Por favor ingresar su mensaje</div>
                </div>
                </div>
                
                <div class="form-group">
                <center>
                    <%= f.submit "Enviar", :class => "btn btn-a text-center" %>
                </center>
                </div>
              
                </div>
            <% end %>
          </div>
          
          <div class="col-md-5 section-md-t3">
            <div class="icon-box section-b2">
              <div class="icon-box-icon">
                <span class="ion-ios-paper-plane"></span>
              </div>
              <div class="icon-box-content table-cell">
                <div class="icon-box-title">
                  <h4 class="icon-title">Tambien comunicate por:</h4>
                </div>
                <div class="icon-box-content">
                  <p class="mb-1">Email.
                    <span class="color-a">contact@homeagency.com</span>
                  </p>
                  <p class="mb-1">Telefono
                    <span class="color-a">+51 1 4204320</span>
                  </p>
                </div>
              </div>
            </div>
            <div class="icon-box section-b2">
              <div class="icon-box-icon">
                <span class="ion-ios-pin"></span>
              </div>
              <div class="icon-box-content table-cell">
                <div class="icon-box-title">
                  <h4 class="icon-title">Ubicanos en</h4>
                </div> 
                <div class="icon-box-content">
                  <p class="mb-1">
                    Aparicio Robles 153, San Miguel 15088
                    <br> Lima
                  </p>
                </div>
              </div>
            </div>
            <div class="icon-box">
              <div class="icon-box-icon">
                <span class="ion-ios-redo"></span>
              </div>
              <div class="icon-box-content table-cell">
                <div class="icon-box-title">
                  <h4 class="icon-title">Redes Sociales</h4>
                </div>
                <div class="icon-box-content">
                  <div class="socials-footer">
                    <ul class="list-inline">
                      <li class="list-inline-item">
                        <a href="#" class="link-one">
                          <i class="fa fa-facebook" aria-hidden="true"></i>
                        </a>
                      </li>
                      <li class="list-inline-item">
                        <a href="#" class="link-one">
                          <i class="fa fa-twitter" aria-hidden="true"></i>
                        </a>
                      </li>

<div class="row">
  <div class="col-6">

    <div class="title-box-d">
      <h6 class="title-d">Búsqueda
        <span class="color-d">de </span>Departamentos</h6>
    </div>
    
    <div class="row">
    <%= form_tag lista_departamentos_path, :method => "get", :class => "form-inline" do %>      
      <%= number_field_tag :piso, params[:piso], {:class => "form-control mx-sm-3", :placeholder => "Número de piso" } %>    
      <%= number_field_tag :numdormitorio, params[:numdormitorio], {:class => "form-control mx-sm-3", :placeholder => "Cantidad dormitorios" } %>
      <%= submit_tag 'Buscar', name: nil, :class => "btn btn-success" %>
    <% end %>
    </div>

  </div>


  <div class="col-6">

    <div class="title-box-d">
      <h6 class="title-d">Búsqueda
        <span class="color-d">de </span>Proyectos</h6>
    </div>

    <div class="row">
      <%= form_tag proyectos_path, :method => "get", :class => "form-inline" do %>
        <%= text_field_tag :nombre, params[:nombre], {:class => "form-control mx-sm-3", :placeholder => "Nombre de Proyecto"} %>
        <%= text_field_tag :distrito, params[:distrito], {:class => "form-control mx-sm-3", :placeholder => "Distrito"} %>
        <%= submit_tag 'Buscar', name: nil, :class => "btn btn-success" %>

      <% end %>
    </div>

  </div>
</div>


<script type="text/javascript">
// Call carousel manually
$('#myCarouselCustom').carousel();

// Go to the previous item
$("#prevBtn").click(function(){
    $("#myCarouselCustom").carousel("prev");
});
// Go to the previous item
$("#nextBtn").click(function(){
    $("#myCarouselCustom").carousel("next");
});
</script>


